                <RowDefinition Height="1*"/>

            </Grid.RowDefinitions>

            <Button Padding="30 0 0 0" HorizontalContentAlignment="Left" Content="Одна из трёх колонок" BorderBrush="#FF726373" BorderThickness="1" Grid.Column="0" Grid.Row="0" Background="#FFB795A9" />
