            <Button Padding="30 0 0 0" HorizontalContentAlignment="Left" Content="Одна из трёх колонок" BorderBrush="#FF726373" BorderThickness="1" Grid.Column="3" Grid.Row="2" Background="#FFB795A9" />
        </Grid>
